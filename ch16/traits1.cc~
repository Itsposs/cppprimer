
#include <cstring>
#include <iostream>

template <typename T>

inline T sigma(const T* const first, const T * const last)
{
	T total();
	while(first != last)
	{
		total += *first;
		first++;
	}
	return total;
}


int main(int argc, char *argv[])
{
	char szname[] = "abc";
	std::size_t nlength = strlen(szname);
	char *p = szname;
	char *q = szname + nlength;

	std::cout << "sigma(p, q):" << sigma(p, q) << std::endl; 
	return 0;
}
